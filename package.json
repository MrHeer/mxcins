{
  "name": "root",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap --npm-client=yarn",
    "build": "mxcins-tools build",
    "clean": "lerna clean --yes",
    "dev": "mtools build -w",
    "lint": "yarn lint:ts && yarn ts-compile-check",
    "lint-staged": "lint-staged",
    "lint-staged:js": "eslint --fix --ext .js",
    "lint-staged:ts": "tslint --fix",
    "lint:js": "eslint --ext .js --fix",
    "lint:ts": "tslint --fix \"packages/**/*.ts*\"",
    "prettier": "prettier --write \"{,!(node_modules)/**/}*.{js,ts}\"",
    "publish": "node ./scripts/publish.js",
    "test": "jest --coverage",
    "ts-compile-check": "tsc --noEmit"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn ts-compile-check && lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,less}": [
      "prettier --write",
      "git add"
    ],
    "**/*.{ts,tsx}": "yarn lint-staged:ts"
  },
  "devDependencies": {
    "@mxcins/tools": "3.0.0",
    "@types/jest": "^24.0.6",
    "babel-jest": "^24.1.0",
    "eslint": "^5.14.1",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^4.0.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.12.4",
    "husky": "^1.3.1",
    "jest": "^24.1.0",
    "lerna": "3.13.1",
    "lint-staged": "^8.1.4",
    "prettier": "^1.16.4",
    "shelljs": "^0.8.3",
    "ts-jest": "^24.0.0",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.17.0",
    "tslint-react": "^3.6.0",
    "typescript": "3.4.1"
  }
}
