{
  "name": "root",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap --npm-client=yarn",
    "lint-staged": "lint-staged",
    "prettier": "prettier --write \"./packages/**/*.js\" \"./packages/**/*.ts\""
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,less}": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "husky": "^1.3.1",
    "lerna": "^3.10.7",
    "lint-staged": "^8.1.4",
    "prettier": "^1.16.4",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.17.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.2.4",
    "umi": "^2.5.1"
  }
}
