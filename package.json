{
  "name": "root",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap --npm-client=yarn",
    "build": "node ./scripts/build.js",
    "publish": "node ./scripts/publish.js",
    "lint": "yarn lint:js && yarn lint:ts",
    "lint:js": "eslint --ext .js packages --fix",
    "lint:ts": "tslint --fix \"packages/**/*.ts*\"",
    "lint-staged": "lint-staged",
    "lint-staged:js": "eslint --fix --ext .js",
    "lint-staged:ts": "tslint --fix",
    "prettier": "prettier --write \"{,!(node_modules)/**/}*.{js,ts}\""
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,less}": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "@mxcins/tools": "0.3.0",
    "eslint": "^5.14.1",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^4.0.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.12.4",
    "husky": "^1.3.1",
    "lerna": "^3.10.7",
    "lint-staged": "^8.1.4",
    "prettier": "^1.16.4",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.17.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.2.4"
  }
}
