{
  "name": "root",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap --npm-client=yarn",
    "build": "mxcins-tools build",
    "clean": "lerna clean --yes",
    "lint": "eslint --fix '**/*.{js,jsx,ts,tsx}' && yarn ts-compile-check",
    "lint-staged": "lint-staged",
    "prettier": "prettier --write \"{,!(node_modules)/**/}*.{js,ts}\"",
    "publish": "node ./scripts/publish.js",
    "test": "jest",
    "ts-compile-check": "tsc --noEmit"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn ts-compile-check && lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "**/*.{less}": [
      "stylelint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@mxcins/bedrock": "1.0.0-beta.4",
    "@mxcins/tools": "3.5.2",
    "@types/jest": "^24.0.6",
    "babel-jest": "^24.1.0",
    "husky": "^1.3.1",
    "jest": "^24.1.0",
    "lerna": "3.15.0",
    "lint-staged": "^8.1.4",
    "prettier": "^1.16.4",
    "shelljs": "^0.8.3",
    "ts-jest": "^24.0.0",
    "typescript": "3.5.2"
  }
}
